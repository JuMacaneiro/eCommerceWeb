extends admin

block details
    .table-responsive
        table.table.table-condensed
            thead
                tr
                    td #
                    td Date
                    td Status
                    td Total
                    td
            tbody
                each order in orders
                    tr
                        td= order.OrderID
                        td= order.OrderDate
                        td= order.Status
                        td= order.Total + ' â‚¬'
                        td
                            form(action='/admin/orders/' + order.OrderID, method='GET')
                                button.btn.btn-default(type='submit')
                                    i.fa.fa-eye
                                    = ' View'
                        td
                            form(action='/admin/orders/' + order.OrderID + '/update', method='GET')
                                button.btn.btn-default(type='submit')
                                    i.fa.fa-list
                                    = ' Update status'