        .container
            .row
                //category_products
                .features_items
                    h2.title.text-center
                        = title
                    if products
                        each product in products
                            - var productUrl = '/categories/' + product.CategorySlug + '/' + product.ProductSlug;
                            .col-sm-3
                                .product-image-wrapper
                                    .single-products
                                        .productinfo.text-center
                                            a(href=productUrl)
                                                img(src=product.ImageLink, alt=product.ProductName)
