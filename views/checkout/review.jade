extends ../layout

block content
    section#cart_items
        .container
            .review-payment
                h2 Review Order
            .row
                .col-sm-8
                    .table-responsive.cart_info
                        table.table.table-condensed
                            thead
                                tr.cart_menu
                                    td.image
                                    td.description Product
                                    td.price Unit Price
                                    td.quantity Quantity
                                    td.total Total
                            tbody
                                if cart
                                    each item in cart
                                        -var name = item.ProductName;
                                        -var productLink = '/cat/' + item.CategorySlug + '/' + item.ProductSlug;
                                        -var unitPrice = item.ProductPrice;
                                        -var quantity = item.quantity;
                                        -var productTotal = item.productTotal;
                                        tr
                                            td.cart_product
                                                a(href=productLink)
                                                    img(src=item.ImageLink, alt=name)
                                            td.cart_description
                                                h4
                                                    a(href=productLink)= name
                                                p= item.Description
                                            td.cart_price
                                                p= unitPrice + ' €'
                                            td.cart_quantity
                                                p=quantity
                                            td.cart_total
                                                p.cart_total_price= productTotal + ' €'

                                    tr
                                        td(colspan='3')
                                        td.cart_quantity
                                            a.btn.btn-default.update(href='/cart') Edit Cart
                .col-sm-4
                    .table-responsive.cart_info
                        if delivery
                            table.table.table-condensed.total-result
                                thead
                                    tr.cart_menu
                                        td(colspan=2) Delivery Address

                                tbody
                                    tr
                                        td Fullname
                                        td= delivery.FullName
                                    tr
                                        td Address
                                        td= delivery.StreetAddress
                                    tr
                                        td
                                        td= delivery.PostCode + ' ' + delivery.City
                                    tr
                                        td
                                        td= delivery.Country
                                    tr
                                        td Tel
                                        td= delivery.Phone

                    .table-responsive.cart_info
                        if summary
                            table.table.table-condensed.total-result
                                thead
                                    tr.cart_menu
                                        td(colspan=2) Summary

                                tbody
                                    tr
                                        td Sub Total
                                        td= summary.subTotal + ' €'
                                    tr
                                        td Discount
                                        td= summary.discount + ' €'
                                    tr.shipping-cost
                                        td Shipping Cost
                                        if summary.shipCost == 0
                                            td Free
                                        else
                                            td= summary.shipCost + ' €'
                                    tr
                                        td Total
                                        td
                                            span= summary.total + ' €'
                                    tr
                                        td(colspan=2).text-right
                                            a.btn.btn-default.check_out(href='/checkout') Order

            .review-payment
                h2 Review & Payment
            .payment-options
                span
                    label
                        input(type='checkbox')
                        |  Direct Bank Transfer
                span
                    label
                        input(type='checkbox')
                        |  Check Payment
                span
                    label
                        input(type='checkbox')
                        |  Paypal
    // /#cart_items
